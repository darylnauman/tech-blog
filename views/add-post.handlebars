<form class="mx-4 my-2 post-form border border-primary rounded-3 text-primary p-2">
  
  <h3 class="ms-3">Add Post</h3>

  <div class="ms-3">
    <label for="post-title" class="form-label">Post Title</label>
    <input type="text" class="form-control text-primary" id="post-title">
  </div>

  <div class="ms-3">
    <label for="post-content" class="form-label">Post Content</label>
    <textarea class="form-control text-primary" aria-label="With textarea" id="post-content"></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary m-3">Submit</button>

</form>

<script src="./js/add-post.js"></script>