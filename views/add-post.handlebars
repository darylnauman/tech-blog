<form class="mx-4 my-2 post-form">
  
  <h5>Add Post</h5>

  <div class="mb-3">
    <label for="post-title" class="form-label">Post Title</label>
    <input type="text" class="form-control" id="post-title">
  </div>

  <div class="input-group">
    <span class="input-group-text">Post Content</span>
    <textarea class="form-control" aria-label="With textarea" id="post-content"></textarea>
  </div>
  
  <button type="submit" class="btn btn-light mt-3">Submit</button>

</form>

<script src="./js/add-post.js"></script>