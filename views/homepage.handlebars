{{#each posts as |post| }} 
<div class="card w-80 m-3">
  
  <div class="card-header">
    <a href="/post/{{post.id}}">
      <h5>{{post.title}}</h5>
    </a>

    <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.user.name}}</h6>
  </div>
  
  <div class="card-body">
    {{post.content}}
  </div>

</div>
{{/each}}