<div class="card w-50 m-3">
  
  <div class="card-header">
    <h4>{{title}}</h4>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{user.name}}</h6>
  </div>
  
  <div class="card-body">
    <p>{{content}}</p>
  </div>

  {{#if isOwner}}
    <button class="btn btn-sm btn-primary m-1" id="updateBtn" data-id="{{id}}">Update Post</button>
    <button class="btn btn-sm btn-danger m-1" id="deleteBtn" data-id="{{id}}">Delete Post</button>
  {{/if}}
  
  <button class="btn btn-sm btn-danger m-1" id="commentBtn" data-id="{{id}}">Add Comment</button>

</div>

<script src="/js/post.js"></script>