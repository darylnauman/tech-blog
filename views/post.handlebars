<div class="container d-flex justify-content-center align-items-center w-75">
  <div class="row align-items-center card my-3 text-primary">
    
    <div class="card-header">
      <h4 class="text-primary">{{title}}</h4>
      <h6 class="card-subtitle text-muted">Posted by {{user.name}} on {{date}}</h6>
    </div>
    
    <div class="card-body">
      <p>{{content}}</p>
    </div>

    {{#if isOwner}}
      <button class="btn btn-sm btn-primary m-1" style="width: 15vw;" id="updateBtn" data-id="{{id}}">Update Post</button>
      <button class="btn btn-sm btn-danger m-1" style="width: 15vw;" id="deleteBtn" data-id="{{id}}">Delete Post</button>
    {{/if}}
    
    {{#unless isOwner}}
      <button class="btn btn-sm btn-primary m-1" style="width: 15vw;" id="commentBtn" data-id="{{id}}">Add Comment</button>
    {{/unless}}
  </div>
</div>
<script src="/js/post.js"></script>